{
  "compileOnSave": false,
  "compilerOptions": {
    "paths" : {
      "stream": ["./node_modules/stream-browserify"],
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "include": [
    "src/app/services/webserial/lib/statics.ts",
    "src/app/services/webserial/lib/sendCommand.ts",
    "src/app/services/webserial/lib/receiveData.ts",],
  "typeRoots": [
    "node_modules/@types"
  ]
}
